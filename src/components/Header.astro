---
const navItems = [
  { href: '#philosophy', label: 'Filosofía' },
  { href: '#treatments', label: 'Tratamientos' },
  { href: '#schedule', label: 'Calendario' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-dark-border bg-dark/80 backdrop-blur-lg supports-[backdrop-filter]:bg-dark/60">
  <div class="container flex h-14 sm:h-16 items-center justify-between px-3 sm:px-4">
    <a class="flex items-center space-x-2" href="/">
      <span class="font-light text-lg sm:text-xl tracking-wide text-light">L'Élixir de Miin</span>
    </a>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center space-x-6 text-sm font-light">
      {navItems.map((item) => (
        <a class="transition-colors hover:text-primary" href={item.href}>
          {item.label}
        </a>
      ))}
    </nav>
    
    <!-- Social Icons & Mobile Menu Button -->
    <div class="flex items-center space-x-2 sm:space-x-4">
      <!-- Social Icons -->
      <div class="hidden sm:flex items-center space-x-3">
        <a
          href="https://www.instagram.com/cosmiatra_sam/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:text-light transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
          </svg>
        </a>
        <a
          href="https://facebook.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:text-light transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden flex items-center justify-center w-8 h-8 text-light hover:text-primary transition-colors"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Navigation Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-dark border-t border-dark-border">
    <nav class="container px-3 py-4 space-y-3">
      {navItems.map((item) => (
        <a 
          class="block py-2 text-sm font-light text-light hover:text-primary transition-colors mobile-nav-link" 
          href={item.href}
        >
          {item.label}
        </a>
      ))}
      
      <!-- Social Icons in Mobile Menu -->
      <div class="flex items-center space-x-4 pt-4 border-t border-dark-border">
        <span class="text-xs text-light-muted">Síguenos:</span>
        <a
          href="https://www.instagram.com/cosmiatra_sam/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:text-light transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
          </svg>
        </a>
        <a
          href="https://facebook.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:text-light transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });

      // Close mobile menu when clicking on a link
      mobileNavLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
        });
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', (e) => {
        const target = e.target as Node;
        if (!mobileMenuBtn.contains(target) && !mobileMenu.contains(target)) {
          mobileMenu.classList.add('hidden');
        }
      });
    }
  });
</script> 