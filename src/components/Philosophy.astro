const philosophyItems = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={1.5} stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23-.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5" />
    </svg>`,
    title: "Armonía",
    description: "Equilibrio entre la innovación científica y la sabiduría natural"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={1.5} stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
    </svg>`,
    title: "Pureza",
    description: "Adoptar la sencillez en los ingredientes y las intenciones"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={1.5} stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
    </svg>`,
    title: "Individualidad",
    description: "Adaptar el cuidado a su esencia única"
  }
];
---

<section id="philosophy" class="w-full py-12 md:py-24 lg:py-32 bg-dark-lighter relative overflow-hidden">
  <div class="absolute -top-[40%] right-[20%] w-[50%] h-[50%] rounded-full bg-gradient-to-br from-primary/10 to-secondary/5 blur-[100px]"></div>
  <div class="container px-4 md:px-6 relative z-10">
    <h2 class="text-2xl font-light tracking-wider sm:text-3xl md:text-4xl text-center mb-8 text-light">
      Nuestra Filosofía
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {philosophyItems.map((item) => (
        <div class="flex flex-col items-center text-center">
          <div class="w-16 h-16 rounded-full bg-dark flex items-center justify-center mb-4 border border-dark-border" set:html={item.icon}></div>
          <h3 class="text-xl font-light mb-2 text-light">{item.title}</h3>
          <p class="text-light-muted">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 